<div class="form-row">
  <div class="form-item">
    <label for="">Título</label>
    <input type="text" name="title" value="<%= book.title %>">
  </div>
  <div class="form-item">
    <label for="">Autor</label>
    <select name="author">
      <% authors.forEach( author =>{ %>
        <% if(author.id === book.author) { %>
          <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
      <% } else { %>
        <option label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } %>
      <% }) %> 
    </select>
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label>Publicación</label>
    <input type="date" name="publishDate"
      value="<%= (book.publishDate == null) ? '' :
        book.publishDate.toISOString().split('T')[0] %>">
  </div>
  <div class="form-item">
    <label>Páginas</label>
    <input type="number" name="pageCount" min="1" 
    value="<%= book.pageCount %>">
  </div>
</div>
<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label for="">Portada</label>
    <input type="file" name="cover" class="book-cover filepond">
  </div>
  <div class="form-item">
    <label for="">Descripción</label>
    <textarea name="description" id="" cols="30" rows="10"><%= book.description  %> </textarea>
  </div>
</div>