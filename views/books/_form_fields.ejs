<div>
  <label for="">Título</label>
  <input type="text" name="title" value="<%= book.title %>">
</div>
<div>
  <label for="">Autor</label>
  <select name="author">
    <% authors.forEach( author =>{ %>
      <% if(author.id === book.author) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
      <% } else { %>
          <option label="<%= author.name %>" value="<%= author.id %>"></option>
      <% } %>
    <% }) %> 
  </select>
</div>
<div>
  <label for="">Publicación</label>
  <input type="date" name="publishDate" 
  value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %> ">
</div>

<div>
  <label for="">Páginas</label>
  <input type="number" name="pageCount" min="1"
    value="<%= book.pageCount %> ">
</div>

<div>
  <label for="">Portada</label>
  <input type="file" name="cover" class="filepond">
</div>

<div>
  <label for="">Descripción</label>
  <textarea name="description" id="" cols="30" rows="10"><%= book.description  %> </textarea>
</div>