<h2>Buscar Authores</h2>
<form action="/authors">
  <label for="">Nombre</label>
  <input type="text" name="name" value="<%= searchOptions.name %>">
  <button type="submit">Buscar</button>
</form>
<br>
<% authors.forEach(author =>{ %>
  <div><%= author.name %></div>
  <a href="/authors/<%= author.id %>">Ver</a>
  <a href="/authors/<%= author.id %>/edit">Editar</a>
  <%- include('../partes/deleteForm',{url: `/authors/${author.id}` }) %> 

<% }) %>